<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.itwillbs.camcar.mapper.Car_ManageMapper">
	
	<select id="selectSameModel">
		SELECT count(*)
		FROM car_model_info
		WHERE car_model = #{car_model}
	</select>
	
	<!-- 차량 모델 등록 -->
	<insert id="insertCarModel">
		INSERT INTO car_model_info
		VALUES(
			#{car_model}
			,#{car_company}
			,#{car_type}
			,#{car_model_image}
			,#{car_logo_image}
		);
	</insert>
	
	<!-- 차량 등록 -->
	<insert id="insertCar">
		INSERT INTO car_info
		VALUES(
			#{car_idx}
			,#{brc_idx}
			,#{car_model}
			,#{car_number}
			,#{car_company}
			,#{car_riding}
			,#{car_fuel_type}
			,#{car_age}
			,#{car_career}
			,#{car_old}
			,#{pet_opt}
			,#{car_license}
			,#{car_weekdays}
			,#{car_weekend}
			,#{car_image1}
			,#{car_image2}
			,#{car_image3}
			,#{car_image4}
			,#{car_image5}
			,#{car_status}
		)
	</insert>
	
	<!-- 차량 정보 조회 리스트 -->
	<select id="selectCarList" resultType="car">
		SELECT *
		FROM car_info
		LIMIT
			#{startRow}     -- Mapper 내의 메서드에서 @Param("startRow") 로 지정한 파라미터명 사용
			, #{listLimit}
	</select>
	
	<!-- 차량 정보 페이징처리 -->
	<select id="selectgetCarListCount" resultType="int">
		SELECT COUNT(*)
		FROM car_info
	</select>
	
	<!-- 차량 상세정보 -->
	<select id="selectCarListDetail" resultType="car"> 
		SELECT*
		FROM car_info
		WHERE car_idx = #{car_idx}
	</select>
	
	<!-- 차량 삭제  -->
	<delete id="cardeleteBoard">
		DELETE 
		FROM car_info
		WHERE car_idx = #{car_idx}
	</delete>
		
	
</mapper>