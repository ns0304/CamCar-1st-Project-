<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.itwillbs.camcar.mapper.Car_ManageMapper">
	
	<select id="selectSameModel">
		SELECT count(*)
		FROM car_model_info
		WHERE car_model = #{car_model}
	</select>
	
	<!-- 차량 등록 -->
	<insert id="insertCar">
		INSERT INTO car_info
		VALUES(
			#{car_idx}
			,#{brc_idx}
			,#{car_model}
			,#{car_number}
			,#{car_company}
			,#{car_riding}
			,#{car_fuel_type}
			,#{car_age}
			,#{car_career}
			,#{car_old}
			,#{pet_opt}
			,#{car_license}
			,#{car_weekdays}
			,#{car_weekend}
			,#{car_image1}
			,#{car_image2}
			,#{car_image3}
			,#{car_image4}
			,#{car_image5}
			,#{car_status}
		)
	</insert>
	
	<!-- 차량 정보 조회 리스트 -->
	<select id="selectCarList" resultType="car">
		SELECT *
		FROM car_info
	</select>
	
	<select id="selectgetCarListCount" resultType="int">
		SELECT COUNT(*)
		FROM car_info
	</select>
	
	<select id="selectCarListDetail">
		SELECT*
		FROM car_info
		WHERE car_idx = #{car_idx}
	</select>
	
</mapper>